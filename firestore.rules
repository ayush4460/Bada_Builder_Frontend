rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Properties collection rules
    match /properties/{propertyId} {
      // Allow read access to all users for active properties
      allow read: if resource.data.status == 'active';
      
      // Allow create access to authenticated users
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.user_id
        && request.resource.data.status == 'active';
      
      // Allow update access only to the property owner
      allow update: if request.auth != null 
        && request.auth.uid == resource.data.user_id;
      
      // Allow delete access only to the property owner
      allow delete: if request.auth != null 
        && request.auth.uid == resource.data.user_id;
    }
    
    // Users collection rules (if you have one)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}